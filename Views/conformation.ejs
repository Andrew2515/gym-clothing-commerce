<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Order Confirmation</title>

  <!-- Link to custom CSS -->
  <link rel="stylesheet" href="/css/style.css">

  <!-- Link to Bootstrap for styling -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="container mt-5"> <!-- Adds spacing with Bootstrap container -->

  <!-- Page Heading -->
  <h1>Thank You for Your Purchase!</h1>

  <!-- Show  order number -->
  <p>Order Number: <strong><%= orderNumber %></strong></p>

  <!-- Show the customer email  -->
  <p>Email: <strong><%= customerEmail %></strong></p>

  <!-- Section Title -->
  <h3>Items in Your Order:</h3>

  <% if (cart.length === 0) { %>
    <!-- Message for no items in the cart -->
    <p>Your cart was empty.</p>
  <% } else { %>
    <!-- Start of list (Bootstrap style) -->
    <ul class="list-group">

      <% cart.forEach(item => { %> <!-- Loop through all items -->
        <li class="list-group-item">
          <strong><%= item.productName %></strong><br> <!-- Item name -->
          Quantity: <%= item.quantity %><br>           <!-- Item quantity -->
          Price: €<%= item.price.toFixed(2) %><br>     <!-- Single  price -->
          Subtotal: €<%= (item.price * item.quantity).toFixed(2) %> <!-- Total price  -->
        </li>
      <% }) %>

    </ul>

    <!-- Show  total order -->
    <p class="mt-3"><strong>Total: €<%= total %></strong></p>
  <% } %>

  <!-- Link back to product/shop page -->
  <a href="/product" class="btn btn-primary mt-4">Back to Shop</a>

</body>
</html>


