          <!-- Nav links -->
                <ul>
                    <li><a href="/">Home</a></li>
                    <li><a href="/shop">Shop</a></li>
                    <li><a href="/login">Login</a></li>
                </ul>
            </nav>
        
        </div>
    </nav>

 <div class="container mt-5 pt-5">
<h2 class="mb-3">Shop Here For Activewear</h2>

<!-- Heading above is for form-->


<!--Input for customers name -->
<label for="customersName">Your Name</label>
<input type="text" id="customerName" name="name" required/>
<!-- Putting in required means that it cant be left empty by the customer-->

<!-- input for customers email-->
 <label for="emailAddress">Your Email</label>
 <input type="email" id="emailAddress" name="email" required/>
 <!-- With "email" this will check for an @ symbol-->

 <!--Dropdown list of the products on offer-->
 <label for="productSelect">Choose Product</label>
 <select name="product" id="productSelect" required>
  </select>
  <script>
    const products= [
    { id: 1, name: 'Muscle T-shirt', price: 19.99 },
    { id: 2, name: 'Gym Shorts',     price: 14.99 },
    { id: 3, name: 'Leggings',       price: 24.99 },
    { id: 4, name: 'Runners',        price: 50.00 },
    { id: 5, name: 'Hoodies',        price: 45.00 },
    { id: 6, name: 'Muscle-vest',    price: 12.99 }
  ];
  document.addEventListener('DOMContentLoaded', () => {
    const select = document.getElementById('productSelect');
    products.forEach(p => {
      const opt = document.createElement('option');
      opt.value = p.id;
      opt.textContent = `${p.name} — €${p.price.toFixed(2)}`;
      select.appendChild(opt);
    });
  });

  </script>
<!--Input for Quantity-->
<label for="qty">Quantity</label>
<input type="number" id="qty" name="quantity" min="1" required/>

<!--Submit Button-->
<button type="submit" class="btn btn-primary mt-3">Purchase</button>
<!-- Add to Cart Form -->
<form action="/add-to-cart" method="POST" onsubmit="return handleAddToCart()">
  <input type="hidden" name="productId" id="cartProductId">
  <input type="hidden" name="productName" id="cartProductName">
  <input type="hidden" name="price" id="cartPrice">
  <input type="hidden" name="quantity" id="cartQty">

  <button type="submit" class="btn btn-success mt-3">Add to Cart</button>
</form>

<a href="/cart" class="btn btn-outline-primary mt-3">View Cart</a>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Form Example</title>

</head>
</body>
<script>
  <!-- ADD TO CART BUTTON CLICKED-->
  function handleAddToCart() { 
    const select = document.getElementById('productSelect'); 
    const quantityInput = document.getElementById('qty');
    const selected = select.options[select.selectedIndex];
    const selectedProduct = products.find(p => p.id == select.value);

    document.getElementById('cartProductId').value = selectedProduct.id;
    document.getElementById('cartProductName').value = selectedProduct.name;
    document.getElementById('cartPrice').value = selectedProduct.price;
    document.getElementById('cartQty').value = quantityInput.value;

    return true; // Submit the form
  }
</script>
</html>

